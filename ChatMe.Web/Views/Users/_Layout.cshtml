@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Scripts {
    <script src="~/Client/lib/js/jquery-3.1.0.min.js"></script>
    <script src="~/Client/lib/js/jquery.unobtrusive-ajax.js"></script>
    <script src="~/Client/lib/js/bootstrap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.14.1/moment.min.js"></script>
    @RenderSection("Scripts", false)
}

@section Styles {
    @RenderSection("Styles", false)
}

<div id="wrapper">
    <div id="sidebar-wrapper">
        <ul class="sidebar-nav">
            <li class="sidebar-brand">
                <a href="#">
                    ChatMe
                </a>
            </li>
            <li>
                @Html.ActionLink("My profile", "index")
            </li>
            <li>
                @Html.ActionLink("Messages", "messages")
            </li>
            <li>
                @Html.ActionLink("News", "news")
            </li>
            <li>
                @Html.ActionLink("Find people", "allUsers")
            </li>
            <li>
                @Html.ActionLink("Settings", "settings")
            </li>
            <li>
                @Html.ActionLink("Logout", "logout", "accounts")
