@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Scripts {
    <script src="~/Client/lib/js/jquery.unobtrusive-ajax.js"></script>
    <script src="~/node_modules/moment/moment.js"></script>
    @RenderSection("Scripts", false)
}

@section Styles {
    @RenderSection("Styles", false)
}

<div id="wrapper">
    <div id="sidebar-wrapper">
        <ul class="sidebar-nav">
            <li class="sidebar-brand">
                <a href="#">
                    <img src="@Url.RouteUrl("Avatar", new { userId = ViewBag.UserId })"
                         class="my-avatar-preview">
                    @ViewBag.DisplayName
                </a>
            </li>
            <li>
                @Html.ActionLink("My profile", "index")
            </li>
            <li>
                @Html.ActionLink("Messages", "messages")
            </li>
            <li>
                @Html.ActionLink("News", "news")
            </li>
            <li>
                @Html.ActionLink("Find people", "allUsers")
            </li>
            <li>
                @Html.ActionLink("Settings", "settings")
            </li>
            <li>
                @Html.ActionLink("Logout", "logout", "accounts")
            </li>

            @if ((bool)ViewBag.IsAdmin == true) {
            <li>
                @Html.ActionLink("Admin panel", "index", "admin", new { Area = "Admin" }, new { })
            </li>
            }
            
        </ul>
    </div>

    <div id="page-content-wrapper">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12">
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>
</div>